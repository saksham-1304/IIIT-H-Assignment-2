{
    "experiment_name": "bestfit",
    "seed": 42,
    "data_path": "dataset/Pride_and_Prejudice-Jane_Austen.txt",
    "tokenization_level": "word",
    "vocab_size": 10000,
    "min_freq": 2,
    "train_ratio": 0.8,
    "val_ratio": 0.1,
    "seq_length": 35,
    "batch_size": 64,
    "embedding_dim": 256,
    "hidden_dim": 256,
    "num_layers": 2,
    "dropout": 0.3,
    "tie_weights": true,
    "learning_rate": 0.001,
    "num_epochs": 50,
    "clip_grad": 5.0,
    "early_stopping_patience": 5,
    "output_dir": "outputs",
    "checkpoint_dir": "checkpoints",
    "plots_dir": "plots"
}
